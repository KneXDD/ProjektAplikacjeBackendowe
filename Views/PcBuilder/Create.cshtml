@using GameHelperApp.Enums
@model PcBuilder    

@{
    ViewBag.Title = "Add new Pc";
    Layout = "_Layout";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add new Pc</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Cpu" class="control-label"></label>
                        <select asp-for="Cpu" class="form-control" asp-items="ViewBag.Cpu"></select>
                        <span asp-validation-for="Cpu" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Motherboard" class="control-label"></label>
                        <select asp-for="Motherboard" class="form-control" asp-items="ViewBag.Motherboard"></select>
                        <span asp-validation-for="Motherboard" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Memory" class="control-label"></label>
                        <select asp-for="Memory" class="form-control" asp-items="ViewBag.Memory"></select>
                        <span asp-validation-for="Memory" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Storge" class="control-label"></label>
                        <select asp-for="Storge" class="form-control" asp-items="ViewBag.Storge"></select>
                        <span asp-validation-for="Storge" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gpu" class="control-label"></label>
                        <select asp-for="Gpu" class="form-control" asp-items="ViewBag.Gpu"></select>
                        <span asp-validation-for="Gpu" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Case" class="control-label"></label>
                        <select asp-for="Case" class="form-control" asp-items="ViewBag.Case"></select>
                        <span asp-validation-for="Case" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Psu" class="control-label"></label>
                        <select asp-for="Psu" class="form-control" asp-items="ViewBag.Psu"></select>
                        <span asp-validation-for="Psu" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-success float-end" />
                        <a class="btn btn-secondary" asp-action="Index">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
