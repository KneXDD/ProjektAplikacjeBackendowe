@model IEnumerable<PcBuilder>

@{
    ViewBag.Title = "PcBuilder";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <title>PcBuilder</title>
</head>
<body>
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-sm">
            <thead class="table-dark">
            <tr class="text-center">
                <th>@Html.DisplayNameFor(x => x.CpuId)</th>
                <th>@Html.DisplayNameFor(x => x.MotherboardId)</th>
                <th>@Html.DisplayNameFor(x => x.MemoryId)</th>
                <th>@Html.DisplayNameFor(x => x.StorgeId)</th>
                <th>@Html.DisplayNameFor(x => x.GpuId)</th>
                <th>@Html.DisplayNameFor(x => x.CaseId)</th>
                <th>@Html.DisplayNameFor(x => x.PsuId)</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var x in Model)
            {
                <tr class="text-center">
                    <td class="align-middle text-uppercase">
                        @Html.DisplayFor(modelItem => x.Cpu.CpuModel)
                    </td>
                    <td class="align-middle text-uppercase">
                        @Html.DisplayFor(modelItem => x.Motherboard.MotherboardName)
                    </td>
                    <td class="align-middle text-uppercase">
                        @Html.DisplayFor(modelItem => x.Memory.MemoryName)
                    </td>
                    <td class="align-middle text-uppercase">
                        @Html.DisplayFor(modelItem => x.Storge.StorgeName)
                    </td>
                    <td class="align-middle text-uppercase">
                        @Html.DisplayFor(modelItem => x.Gpu.GpuModel)
                    </td>
                    <td class="align-middle text-uppercase">
                        @Html.DisplayFor(modelItem => x.Case.Name)
                    </td>
                    <td class="align-middle text-uppercase">
                        @Html.DisplayFor(modelItem => x.Psu.PsuModel)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-info text-white" asp-action="Details" asp-route-id="@x.PcBuilderId">Details</a>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <a class="btn btn-success" asp-action="Edit" asp-route-id="@x.PcBuilderId">Edit</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@x.PcBuilderId">Delete</a>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div class="text-white">
        <a asp-controller="PcBuilder" asp-action="Create" class="btn btn btn-dark">Add Pc</a>
    </div>
}
</body>
</html>