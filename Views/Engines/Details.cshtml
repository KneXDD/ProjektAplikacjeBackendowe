@model Engines

@{
    ViewBag.Title = "Details";
    Layout = "_Layout";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details engine @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group text-center">
                    <img id="Preview" class="border-info rounded-circle" style="max-width: 150px" />
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ReleaseDate" class="control-label"></label>
                    <input asp-for="ReleaseDate" class="form-control" readonly/>
                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Developer" class="control-label"></label>
                    <input asp-for="Developer" class="form-control" readonly/>
                    <span asp-validation-for="Developer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="License" class="control-label"></label>
                    <input asp-for="License" class="form-control" disabled/>
                    <span asp-validation-for="License" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EngineDescription" class="control-label"></label>
                    <textarea asp-for="EngineDescription" class="form-control" readonly></textarea>
                    <span asp-validation-for="EngineDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EngineLogo" class="control-label"></label>
                    <input asp-for="EngineLogo" class="form-control" readonly/>
                    <span asp-validation-for="EngineLogo" class="text-danger"></span>
                </div>
                <p></p>
                <div class="form-group">
                    <a class="btn btn-secondary" asp-action="Index">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script>
        $(document).ready(function ()
        {
            var output = document.getElementById('Preview');
            output.src = $("#EngineLogo").val();
        })
        $("#EngineLogo").on("change",function ()
        {
            var output = document.getElementById('Preview');
            output.src = $(this).val();
        })
    </script>
}
