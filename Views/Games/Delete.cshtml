@model Games

@{
    ViewBag.Title = "Delete game";
    Layout = "_Layout";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete game @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ReleaseDate" class="control-label"></label>
                    <input asp-for="ReleaseDate" class="form-control" readonly/>
                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cover" class="control-label"></label>
                    <input asp-for="Cover" class="form-control" readonly/>
                    <span asp-validation-for="Cover" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StudioId" class="control-label"></label>
                    <input asp-for="Studios.Name" class="form-control" asp-items="ViewBag.Studios" disabled/>
                    <span asp-validation-for="StudioId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Genre" class="control-label"></label>
                    <input asp-for="Genre" class="form-control" readonly/>
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EngineId" class="control-label"></label>
                    <input asp-for="Engines.Name" class="form-control" readonly asp-items="ViewBag.Engines"/>
                    <span asp-validation-for="EngineId" class="text-danger"></span>
                </div>
                <p></p>
                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="GameId" />
                        @if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                        <input type="submit" value="Accept" class="btn btn-danger float-end" />
                        }
                    </form>
                    <a class="btn btn-secondary" asp-action="Index">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
