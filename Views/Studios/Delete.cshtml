@model Studios

@{
    ViewBag.Title = "Delete Studio";
    Layout = "_Layout";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group text-center">
                    <img id="Preview" class="border-info rounded-circle" style="max-width: 150px" />
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="YearOfEstablishment" class="control-label"></label>
                    <input asp-for="YearOfEstablishment" class="form-control" readonly/>
                    <span asp-validation-for="YearOfEstablishment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Country" class="control-label"></label>
                    <input asp-for="Country" class="form-control" readonly></input>
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyDescriptiopn" class="control-label"></label>
                    <textarea asp-for="CompanyDescriptiopn" class="form-control" readonly></textarea>
                    <span asp-validation-for="CompanyDescriptiopn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Logo" class="control-label"></label>
                    <input asp-for="Logo" class="form-control" readonly/>
                    <span asp-validation-for="Logo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumberOfWorkers" class="control-label"></label>
                    <input asp-for="NumberOfWorkers" class="form-control" readonly/>
                    <span asp-validation-for="NumberOfWorkers" class="text-danger"></span>
                </div>
                <p></p>
                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="StudioId" />
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <input type="submit" value="Accept" class="btn btn-danger float-end"/>
                        }
                    </form>
                    <a class="btn btn-secondary" asp-action="Index">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script>
        $(document).ready(function ()
        {
            var output = document.getElementById('Preview');
            output.src = $("#Logo").val();
        })
        $("#Logo").on("change",function ()
        {
            var output = document.getElementById('Preview');
            output.src = $(this).val();
        })
    </script>
}
