@using GameHelperApp.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Studios

@{
    ViewBag.Title = "Update Studio";
    Layout = "_Layout";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="StudioId" class="form-control" hidden/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="YearOfEstablishment" class="control-label"></label>
                        <input asp-for="YearOfEstablishment" class="form-control" />
                        <span asp-validation-for="YearOfEstablishment" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Country" class="control-label"></label>
                        <select asp-for="Country" class="form-control" asp-items="Html.GetEnumSelectList<Countries>()"></select>
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CompanyDescriptiopn" class="control-label"></label>
                        <input asp-for="CompanyDescriptiopn" class="form-control" />
                        <span asp-validation-for="CompanyDescriptiopn" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Logo" class="control-label"></label>
                        <input type="file" asp-for="Logo" class="form-control" />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NumberOfWorkers" class="control-label"></label>
                        <input asp-for="NumberOfWorkers" class="form-control" />
                        <span asp-validation-for="NumberOfWorkers" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-success float-end" />
                        <a class="btn btn-secondary" asp-action="Index">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
