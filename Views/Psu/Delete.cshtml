@model Psu

@{
    ViewBag.Title = "Delete Psu";
    Layout = "_Layout";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete @Model.PsuModel</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="PsuModel" class="control-label"></label>
                        <input asp-for="PsuModel" class="form-control" readonly/>
                        <span asp-validation-for="PsuModel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Power" class="control-label"></label>
                        <input asp-for="Power" class="form-control" readonly/>
                        <span asp-validation-for="Power" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Rgb" class="control-label"></label>
                        <p>Select if it has RGB: <input asp-for="Rgb" disabled/></p>
                        <span asp-validation-for="Rgb" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cabling" class="control-label"></label>
                        <input asp-for="Cabling" class="form-control" readonly/>
                        <span asp-validation-for="Cabling" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" readonly/>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="PsuId" />
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <input type="submit" value="Accept" class="btn btn-danger float-end"/>
                            }
                        </form>
                        <a class="btn btn-secondary" asp-action="Index">Back</a>
                    </div>
            </div>
        </div>
    </div>
</div>
