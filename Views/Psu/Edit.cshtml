@using GameHelperApp.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Psu

@{
    ViewBag.Title = "Update Psu";
    Layout = "_Layout";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update @Model.PsuModel</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="PsuId" class="form-control" hidden/>
                    </div>
                    <div class="form-group">
                        <label asp-for="PsuModel" class="control-label"></label>
                        <input asp-for="PsuModel" class="form-control" />
                        <span asp-validation-for="PsuModel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Power" class="control-label"></label>
                        <input asp-for="Power" class="form-control" />
                        <span asp-validation-for="Power" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Rgb" class="control-label"></label>
                        <p>Select if it has RGB: <input asp-for="Rgb"/></p>
                        <span asp-validation-for="Rgb" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cabling" class="control-label"></label>
                        <select asp-for="Cabling" class="form-control" asp-items="Html.GetEnumSelectList<Cabling>()"></select>
                        <span asp-validation-for="Cabling" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-success float-end" />
                        <a class="btn btn-secondary" asp-action="Index">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

