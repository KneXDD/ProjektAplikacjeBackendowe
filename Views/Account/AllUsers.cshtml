@model IEnumerable<AppUser>

@{
    ViewData["Title"] = "Users List";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <title>title</title>
</head>
<body>
<div class="col-md-3">
<form class="form-inline" asp-controller="Account" asp-action="Search" style="padding-right: 5px;">
    <input name="search" type="text" class="form-control bg-dark text-white" placeholder="Search by name" aria-label="Recipient's username">
</form>
</div>
<p></p>
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-sm">
            <thead class="table-dark">
            <tr class="text-center">
                <th>@Html.DisplayNameFor(x => x.FullName)</th>
                <th>@Html.DisplayNameFor(x => x.UserName)</th>
                <th>@Html.DisplayNameFor(x => x.Email)</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var x in Model)
            {
                <tr class="text-center">
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => x.FullName)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => x.UserName)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => x.Email)
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
</body>
</html>