@model GameHelperApp.ViewModel.ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Change Password</h4>
        </p>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b>- @TempData["Error"]</span>
            </div>
        }
          @if (TempData["Success"] != null)
          {
              <div class="col-md-12 alert alert-success">
                  <span>@TempData["Success"] </span>
              </div>
          }
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="ChangePassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="CurrentPassword" class="control-label"></label>
                            <input asp-for="CurrentPassword" class="form-control"/>
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NewPassword" class="control-label"></label>
                            <input asp-for="NewPassword" class="form-control"/>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmNewPassword" class="control-label"></label>
                            <input asp-for="ConfirmNewPassword" class="form-control"/>
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                        </div>
                    <div class="form-group">
                            <input class="btn btn-success float-end" type="submit" value="Accept" />
                            <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>

