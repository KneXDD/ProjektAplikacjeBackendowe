@model Cpu

@{
    ViewBag.Title = "Delete cpu";
    Layout = "_Layout";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete Cpu @Model.CpuModel</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CpuModel" class="control-label"></label>
                    <input asp-for="CpuModel" class="form-control" readonly/>
                    <span asp-validation-for="CpuModel" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SocketNumber" class="control-label"></label>
                    <input asp-for="SocketNumber" class="form-control" readonly/>
                    <span asp-validation-for="SocketNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CoreClock" class="control-label"></label>
                    <input asp-for="CoreClock" class="form-control" readonly/>
                    <span asp-validation-for="CoreClock" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhysicalCores" class="control-label"></label>
                    <input asp-for="PhysicalCores" class="form-control" disabled/>
                    <span asp-validation-for="PhysicalCores" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SupportedMemories" class="control-label"></label>
                    <input asp-for="SupportedMemories" class="form-control" readonly/>
                    <span asp-validation-for="SupportedMemories" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" readonly/>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <p></p>
                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="CpuId" />
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <input type="submit" value="Accept" class="btn btn-danger float-end"/>
                        }
                    </form>
                    <a class="btn btn-secondary" asp-action="Index">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
