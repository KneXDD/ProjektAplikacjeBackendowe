@using GameHelperApp.Enums
@model Cpu

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Zmień dane klienta</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <img id="PictureUrlPreview" />
                    </div>
                    <div class="form-group">
                        <input asp-for="CpuId" class="form-control" hidden/>
                    </div>
                    <div class="form-group">
                        <label asp-for="CpuModel" class="control-label"></label>
                        <input asp-for="CpuModel" class="form-control" />
                        <span asp-validation-for="CpuModel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SocketNumber" class="control-label"></label>
                        <input asp-for="SocketNumber" class="form-control" />
                        <span asp-validation-for="SocketNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CoreClock" class="control-label"></label>
                        <input asp-for="CoreClock" class="form-control" />
                        <span asp-validation-for="CoreClock" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhysicalCores" class="control-label"></label>
                        <input asp-for="PhysicalCores" class="form-control" required/>
                        <span asp-validation-for="PhysicalCores" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SupportedMemories" class="control-label"></label>
                        <select asp-for="SupportedMemories" class="form-control" asp-items="Html.GetEnumSelectList<SupportedMemories>()"></select>
                        <span asp-validation-for="SupportedMemories" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <input type="submit" value="Update" class="btn btn-success float-end"/>
                        }
                        <a class="btn btn-secondary" asp-action="Index">Powrót</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
