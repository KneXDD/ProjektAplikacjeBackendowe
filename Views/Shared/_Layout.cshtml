<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - GameHelperApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/GameHelperApp.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark bg-gradient border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GameHelperApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact</a>
                    </li>
                    <li class="nav-item dropdown">
                        <button class="btn dropdown-toggle text-light" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Hardware
                        </button>
                        <ul class="dropdown-menu bg-dark" aria-labelledby="dropdown">
                            <li><a class="nav-link text-light dropdown-item" asp-area="" asp-controller="Case" asp-action="Index">Case</a></li>
                            <li><a class="nav-link text-light dropdown-item" asp-area="" asp-controller="Cpu" asp-action="Index">Cpu</a></li>
                            <li><a class="nav-link text-light dropdown-item" asp-area="" asp-controller="Gpu" asp-action="Index">Gpu</a></li>
                            <li><a class="nav-link text-light dropdown-item" asp-area="" asp-controller="Memory" asp-action="Index">Memory</a></li>
                            <li><a class="nav-link text-light dropdown-item" asp-area="" asp-controller="Motherboard" asp-action="Index">Motherboard</a></li>
                            <li><a class="nav-link text-light dropdown-item" asp-area="" asp-controller="Psu" asp-action="Index">Psu</a></li>
                            <li><a class="nav-link text-light dropdown-item" asp-area="" asp-controller="Storge" asp-action="Index">Storge</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <button class="btn dropdown-toggle text-light" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Games World
                        </button>
                        <ul class="dropdown-menu bg-dark" aria-labelledby="dropdown">
                            <li><a class="nav-link text-light dropdown-item" asp-area="" asp-controller="Engines" asp-action="Index">Engines</a></li>
                            <li><a class="nav-link text-light dropdown-item" asp-area="" asp-controller="Games" asp-action="Index">Games</a></li>
                            <li><a class="nav-link text-light dropdown-item" asp-area="" asp-controller="Studios" asp-action="Index">Studios</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="PcBuilder" asp-action="Index">Pc Builder</a>
                    </li>
                </ul>
                <partial name="_Identity.cshtml"/>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted bg-dark bg-gradient">
    <div class="container">
        &copy; 2022 - GameHelperApp Maciej Jarmuła - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        <a asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>