@model Storge

@{
    ViewBag.Title = "Delete Storge";
    Layout = "_Layout";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete @Model.StorgeName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="StorgeName" class="control-label"></label>
                        <input asp-for="StorgeName" class="form-control" readonly/>
                        <span asp-validation-for="StorgeName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Producer" class="control-label"></label>
                        <input asp-for="Producer" class="form-control" readonly/>
                        <span asp-validation-for="Producer" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SSD" class="control-label"></label>
                        <p>Select if it has SSD: <input asp-for="SSD" disabled/></p>
                        <span asp-validation-for="SSD" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ReadSpeed" class="control-label"></label>
                        <input asp-for="ReadSpeed" class="form-control" readonly/>
                        <span asp-validation-for="ReadSpeed" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WriteSpeed" class="control-label"></label>
                        <input asp-for="WriteSpeed" class="form-control" readonly/>
                        <span asp-validation-for="WriteSpeed" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Interface" class="control-label"></label>
                        <input asp-for="Interface" class="form-control" readonly></input>
                        <span asp-validation-for="Interface" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Capacity" class="control-label"></label>
                        <input asp-for="Capacity" class="form-control" readonly/>
                        <span asp-validation-for="Capacity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" readonly/>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="StorgeId" />
                            <input type="submit" value="Accept" class="btn btn-danger float-end" />
                        </form>
                        <a class="btn btn-secondary" asp-action="Index">Back</a>
                    </div>
            </div>
        </div>
    </div>
</div>
