@using GameHelperApp.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Motherboard

@{
    ViewBag.Title = "Update Motherboard";
    Layout = "_Layout";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update @Model.MotherboardName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="MotherboardId" class="form-control" hidden/>
                    </div>
                    <div class="form-group">
                        <label asp-for="MotherboardName" class="control-label"></label>
                        <input asp-for="MotherboardName" class="form-control" />
                        <span asp-validation-for="MotherboardName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SocketNumber" class="control-label"></label>
                        <input asp-for="SocketNumber" class="form-control" />
                        <span asp-validation-for="SocketNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Producer" class="control-label"></label>
                        <input asp-for="Producer" class="form-control" />
                        <span asp-validation-for="Producer" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Rgb" class="control-label"></label>
                        <p>Select if it has RGB: <input asp-for="Rgb"/></p>
                        <span asp-validation-for="Rgb" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CaseType" class="control-label"></label>
                        <select asp-for="CaseType" class="form-control" asp-items="Html.GetEnumSelectList<CaseType>()"></select>
                        <span asp-validation-for="CaseType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-success float-end" />
                        <a class="btn btn-secondary" asp-action="Index">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
