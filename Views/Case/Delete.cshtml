@model Case

@{
    ViewBag.Title = "Delete Case";
    Layout = "_Layout";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete Case @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CaseType" class="control-label"></label>
                    <input asp-for="CaseType" class="form-control" readonly/>
                    <span asp-validation-for="CaseType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Producer" class="control-label"></label>
                    <input asp-for="Producer" class="form-control" readonly/>
                    <span asp-validation-for="Producer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumberOfFans" class="control-label"></label>
                    <input asp-for="NumberOfFans" class="form-control" disabled/>
                    <span asp-validation-for="NumberOfFans" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GraphicsCardLength" class="control-label"></label>
                    <input asp-for="GraphicsCardLength" class="form-control" readonly/>
                    <span asp-validation-for="GraphicsCardLength" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" readonly/>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rgb" class="control-label"></label>
                    <input asp-for="Rgb" disabled/>
                    <span asp-validation-for="Rgb" class="text-danger"></span>
                </div>
                <p></p>
                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="CaseId" />
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <input type="submit" value="Accept" class="btn btn-danger float-end"/>
                        }
                    </form>
                    <a class="btn btn-secondary" asp-action="Index">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>