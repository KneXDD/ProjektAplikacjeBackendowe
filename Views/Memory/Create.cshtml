@using GameHelperApp.Enums
@model Memory

@{
    ViewBag.Title = "Add new Memory";
    Layout = "_Layout";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add new Memory</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="MemoryName" class="control-label"></label>
                        <input asp-for="MemoryName" class="form-control" />
                        <span asp-validation-for="MemoryName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ram" class="control-label"></label>
                        <select asp-for="Ram" class="form-control" asp-items="Html.GetEnumSelectList<Ram>()"></select>
                        <span asp-validation-for="Ram" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Modules" class="control-label"></label>
                        <input asp-for="Modules" class="form-control" />
                        <span asp-validation-for="Modules" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Timing" class="control-label"></label>
                        <input asp-for="Timing" class="form-control" />
                        <span asp-validation-for="Timing" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Producer" class="control-label"></label>
                        <input asp-for="Producer" class="form-control"></input>
                        <span asp-validation-for="Producer" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Rgb" class="control-label"></label>
                        <p>Select if it has RGB: <input asp-for="Rgb"/></p>
                        <span asp-validation-for="Rgb" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Delays" class="control-label"></label>
                        <select asp-for="Delays" class="form-control" asp-items="Html.GetEnumSelectList<Delays>()"> </select>
                        <span asp-validation-for="Delays" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <input type="submit" value="Create" class="btn btn-success float-end"/>
                        }
                        <a class="btn btn-secondary" asp-action="Index">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
